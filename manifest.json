{
  "manifest_version": 3,
  "name": "ebook_comic_downloader",
  "description": "针对常用电子书平台的漫画图片下载器",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "downloads",
    "scripting",
    "contextMenus",
    "notifications"
   
  ],

  "action": {
    "default_popup": "/popup/popup.html"
  },

  "content_scripts": [{
    "matches": ["https://manga.bilibili.com/mc*"],
    "js": [ "./comicJs/tool.js",
            "./comicJs/biliComic.js",
            "./main.js"]
  }]
}